a_list = [1,2,2,3,4,5,2]
def find_indices(list_to_check, item_to_find):
    indices = []
    for idx, value in enumerate(a_list):
        if value == item_to_find:
            indices.append(idx)
    return indices

print('Pozitia elementului 1 este: ', find_indices(a_list,1))

print('Pozitiile elementului 2 sunt: ', find_indices(a_list,2))
print('Pozitia elementului 6 este: ', find_indices(a_list, 6))
